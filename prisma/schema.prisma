// prisma/schema.prisma
datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/client"
}

model Todo {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      String   @default("pending") 
  priority    String   @default("Medium")  
  createdAt   DateTime @default(now())
}